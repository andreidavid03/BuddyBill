generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  groups        Group[]        @relation("UserGroups")
  transactions  Expense[]      @relation("UserExpenses")
  notifications Notification[] @relation("UserNotifications")
}

model Group {
  id       String    @id @default(uuid())
  name     String
  members  User[]    @relation("UserGroups")
  expenses Expense[]
}

model Expense {
  id          String   @id @default(uuid())
  amount      Float
  description String
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], name: "UserExpenses")

  groupId String
  group   Group  @relation(fields: [groupId], references: [id])

  notifications Notification[] @relation("ExpenseNotifications")
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false) // ✅ adaugă acest rând

  userId String
  user   User   @relation(fields: [userId], references: [id], name: "UserNotifications")

  expenseId String?
  expense   Expense? @relation(fields: [expenseId], references: [id], name: "ExpenseNotifications")
}
